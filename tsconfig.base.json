{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/in-memory-db": ["in-memory-db/src/index.ts"],
      "@/shared/in-memory-db": ["shared/in-memory-db/src/index.ts"]
    }
  }
}
